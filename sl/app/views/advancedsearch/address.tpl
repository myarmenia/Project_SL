                }else{
                    countAddress();
                }
            }else{
                countAddress();
            }

//            $('#preloader').hide();
        });

    });

    function countAddress(){
        countAjax++;
        if(countAjax == realCount){
            $('#advancedAddress').submit();
        }
    }

</script>